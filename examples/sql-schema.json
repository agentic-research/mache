{
  "version": "v1",
  "nodes": [
    {
      "name": "tables",
      "selector": "$",
      "children": [
        {
          "name": "{{.name}}",
          "selector": "(create_table (object_reference name: (identifier) @name) @scope)",
          "files": [
            {
              "name": "source",
              "content_template": "{{.scope}}"
            }
          ]
        }
      ]
    },
    {
      "name": "views",
      "selector": "$",
      "children": [
        {
          "name": "{{.name}}",
          "selector": "(create_view (object_reference name: (identifier) @name) @scope)",
          "files": [
            {
              "name": "source",
              "content_template": "{{.scope}}"
            }
          ]
        }
      ]
    }
  ]
}
